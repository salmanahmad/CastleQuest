package code{	/*****************************************	 * Game1 :	 * Demonstrates a maze game and user interface.	 * -------------------	 * See 1_maze.fla	 ****************************************/	 	import flash.events.Event;	import flash.events.MouseEvent;	import flash.events.KeyboardEvent;	import flash.display.MovieClip;	import flash.display.SimpleButton;	import flash.ui.Keyboard;		public class GameController extends MovieClip	{		//*************************				var rfidController:RFIDController = null;		var cannonAnimation:CannonLaunch = null;				public function GameController()		{			rfidController = new RFIDController(this);																				  						// Update screen every frame			addEventListener(Event.ENTER_FRAME,enterFrameHandler);		}								public function newCard(reader:int, card:int):void		{			cannonAnimation = new CannonLaunch();			cannonAnimation.x = 50;			cannonAnimation.y = 300;			addChild(cannonAnimation);		}						//*************************		// Event Handling:				protected function enterFrameHandler(event:Event):void		{						if(cannonAnimation && cannonAnimation.currentFrame == cannonAnimation.totalFrames) {				cannonAnimation = null;				castle2.gotoAndPlay("destroy");			}		}						}}